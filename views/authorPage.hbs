<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>G64 Reads: Books</title>
    <link rel="stylesheet" href="/main.css">
  </head>
  <body>
    <header>
      <a href="/">
        <img id="logo" width="110px" height="80px" src="./bookLogo.png" alt="an open book">
        <h1>Galvanize Reads</h1>
      </a>
    </header>
    <a href="/authors">
      <button>Authors</button>
    </a>
    <a href="/books">
      <button disabled>Books</button>
    </a>
    <div id="bookArea">
      {{#each data}}
        <a href="/authors/{{author_id}}">
          <div class="homeAuthor bookLinks">
            <img class="bookCovers" src="{{portrate_url}}" alt="{{name}}">
            <div class="homeBookInfo">
              <h3>{{name}}</h3>
              <p> {{bio}} </p>
            </div>
            <div class="">
              <p>{{books}}</p>
            </div>
          </div>
        </a>
      {{/each}}
    </div>
  </body>
</html>
