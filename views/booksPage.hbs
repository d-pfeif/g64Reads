<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>G64 Reads: Books</title>
    <link rel="stylesheet" href="/main.css">
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
  </head>
  <body>
    <header>
      <a href="/">
        <img id="logo" width="110px" height="80px" src="/bookLogo.png" alt="an open book">
        <h1>Galvanize Reads</h1>
      </a>
    </header>
    <div id="bookNav">
      <a href="/authors">Authors</a>
      <a style="background: darkred">Books</a>
      <a href="/books/new">Add Book</a>
    </div>
    <div id="bookArea">
      {{#each bookData}}
        <a href="/books/{{book_id}}">
          <div class="homeBooks bookLinks">
            <img class="bookCovers" src="{{url}}" alt="{{title}}">
            <div class="homeBookInfo">
              <h3>{{title}}</h3>
              <h5>by {{authors }}</h5>
              <h5>{{genre}}</h5>
              <p> {{desc}} </p>
            </div>
          </div>
        </a>
      {{/each}}
    </div>
  </body>
</html>
